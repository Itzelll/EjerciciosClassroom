@model MVC_Contratos.Models.Entities.Contrato

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Contrato</h4>
<hr />
<div class="row">
